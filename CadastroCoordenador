import java.util.ArrayList;
import java.util.List;

public class Coordenador {
    private String nome;
    private String cargo;
    private double salario;
    private String departamento;

    public Coordenador(String nome, String cargo, double salario, String departamento) {
        this.nome = nome;
        this.cargo = cargo;
        this.salario = salario;
        this.departamento = departamento;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getCargo() {
        return cargo;
    }

    public void setCargo(String cargo) {
        this.cargo = cargo;
    }

    public double getSalario() {
        return salario;
    }

    public void setSalario(double salario) {
        if (salario >= 0) {
            this.salario = salario;
        } else {
            System.out.println("Salário deve ser maior ou igual a zero.");
        }
    }

    public String getDepartamento() {
        return departamento;
    }

    public void setDepartamento(String departamento) {
        this.departamento = departamento;
    }

    public static void main(String[] args) {
        Coordenador coordenador = new Coordenador("João Silva", "Coordenador de TI", 7500.00, "Tecnologia");
    }
}

public class CadastroCoordenador {
    private List<Coordenador> coordenadores;

    public CadastroCoordenador() {
        this.coordenadores = new ArrayList<>();
    }

    public void adicionarCoordenador(Coordenador coordenador) {
        coordenadores.add(coordenador);
    }

    public List<Coordenador> listarCoordenadores() {
        return coordenadores;
    }

    public Coordenador buscarCoordenadorPorNome(String nome) {
        for (Coordenador coordenador : coordenadores) {
            if (coordenador.getNome().equalsIgnoreCase(nome)) {
                return coordenador;
            }
        }
        return null;
    }

    public static void main(String[] args) {
        CadastroCoordenador cadastro = new CadastroCoordenador();

        Coordenador coordenador1 = new Coordenador("João Silva", "Coordenador de TI", 7500.00, "Tecnologia");
        Coordenador coordenador2 = new Coordenador("Maria Oliveira", "Coordenadora de RH", 6800.00, "Recursos Humanos");

        cadastro.adicionarCoordenador(coordenador1);
        cadastro.adicionarCoordenador(coordenador2);

        List<Coordenador> todosCoordenadores = cadastro.listarCoordenadores();
        System.out.println("Total de coordenadores cadastrados: " + todosCoordenadores.size());

        Coordenador buscado = cadastro.buscarCoordenadorPorNome("Maria Oliveira");
        if (buscado != null) {
            System.out.println("Coordenador encontrado: " + buscado.getNome());
        } else {
            System.out.println("Coordenador não encontrado.");
        }
    }
}
